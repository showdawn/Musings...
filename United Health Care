    <script>
        document.addEventListener('DOMContentLoaded', () => {

            const brilliantBlues = {
                dark: '#004AAD',
                medium: '#0094D1',
                light: '#78C0E0',
                aqua: '#A1E8CC',
                bg: '#F0F8EA'
            };

            const wrapLabel = (label, maxWidth = 16) => {
                if (typeof label !== 'string' || label.length <= maxWidth) {
                    return label;
                }
                const words = label.split(' ');
                const lines = [];
                let currentLine = '';
                words.forEach(word => {
                    if ((currentLine + word).length > maxWidth) {
                        lines.push(currentLine.trim());
                        currentLine = '';
                    }
                    currentLine += word + ' ';
                });
                lines.push(currentLine.trim());
                return lines;
            };

            const tooltipTitleCallback = (tooltipItems) => {
                const item = tooltipItems[0];
                let label = item.chart.data.labels[item.dataIndex];
                if (Array.isArray(label)) {
                    return label.join(' ');
                }
                return label;
            };

            const defaultOptions = {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                    },
                    tooltip: {
                        callbacks: {
                            title: tooltipTitleCallback
                        }
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value, index, values) {
                                return '$' + value + 'B';
                            }
                        }
                    }
                }
            };
            
            const initRevenueChart = () => {
                const ctx = document.getElementById('revenueChart').getContext('2d');
                new Chart(ctx, {
                    type: 'line',
                    data: {
                        labels: ['FY 2021', 'FY 2022', 'FY 2023', 'FY 2024'],
                        datasets: [{
                            label: 'Total Revenue (USD Billions)',
                            data: [287.6, 324.2, 371.6, 400.3],
                            borderColor: brilliantBlues.dark,
                            backgroundColor: 'rgba(0, 74, 173, 0.2)',
                            fill: true,
                            tension: 0.4
                        }]
                    },
                    options: {
                       ...defaultOptions,
                        scales: {
                            y: {
                                beginAtZero: false,
                                ticks: {
                                    callback: function(value) { return '$' + value + 'B'; }
                                }
                            }
                        }
                    }
                });
            };
            
            const initMcrChart = () => {
                const ctx = document.getElementById('mcrChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['FY 2022', 'FY 2023', 'FY 2024', 'Q1 2025'],
                        datasets: [{
                            label: 'Medical Care Ratio (%)',
                            data: [83.0, 83.2, 85.5, 84.8],
                            backgroundColor: [brilliantBlues.medium, brilliantBlues.medium, brilliantBlues.dark, brilliantBlues.light],
                            borderColor: brilliantBlues.dark,
                            borderWidth: 1
                        }]
                    },
                    options: {
                        ...defaultOptions,
                        scales: {
                            y: {
                                beginAtZero: false,
                                min: 80,
                                ticks: {
                                    callback: function(value) { return value + '%'; }
                                }
                            }
                        }
                    }
                });
            };

            const initCashVsIncomeChart = () => {
                const ctx = document.getElementById('cashVsIncomeChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['FY 2022', 'FY 2023', 'FY 2024'],
                        datasets: [{
                            label: 'Net Income (USD Billions)',
                            data: [20.1, 22.4, 14.4],
                            backgroundColor: brilliantBlues.light,
                        }, {
                            label: 'Operating Cash Flow (USD Billions)',
                            data: [26.4, 29.3, 24.2], 
                            backgroundColor: brilliantBlues.dark,
                        }]
                    },
                    options: {
                        ...defaultOptions
                    }
                });
            };

            const initDividendChart = () => {
                const ctx = document.getElementById('dividendChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['2021', '2022', '2023', '2024', '2025 (Proj.)'],
                        datasets: [{
                            label: 'Annual Dividend Per Share ($)',
                            data: [5.80, 6.60, 7.52, 8.18, 8.84],
                            backgroundColor: brilliantBlues.medium,
                        }]
                    },
                    options: {
                        ...defaultOptions,
                        scales: {
                            y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) { return '$' + value.toFixed(2); }
                                }
                            }
                        }
                    }
                });
            };

            const initPeRatioChart = () => {
                const ctx = document.getElementById('peRatioChart').getContext('2d');
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: ['5-Year Avg. P/E', 'Current Fwd P/E'],
                        datasets: [{
                            label: 'P/E Ratio',
                            data: [20, 13.2],
                            backgroundColor: [brilliantBlues.dark, brilliantBlues.light],
                        }]
                    },
                    options: {
                        ...defaultOptions,
                        scales: {
                             y: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) { return value + 'x'; }
                                }
                            }
                        }
                    }
                });
            };

            const initRoeChart = () => {
                const ctx = document.getElementById('roeChart').getContext('2d');
                const rawLabels = ['UnitedHealth (UNH)', 'Cigna (CI)', 'Elevance (ELV)', 'CVS Health (CVS)'];
                new Chart(ctx, {
                    type: 'bar',
                    data: {
                        labels: rawLabels.map(label => wrapLabel(label)),
                        datasets: [{
                            label: 'Return on Equity (TTM %)',
                            data: [22.7, 18.7, 12.4, 7.0],
                            backgroundColor: [brilliantBlues.dark, brilliantBlues.medium, brilliantBlues.light, brilliantBlues.aqua],
                        }]
                    },
                    options: {
                        ...defaultOptions,
                        indexAxis: 'y',
                         scales: {
                             x: {
                                beginAtZero: true,
                                ticks: {
                                    callback: function(value) { return value + '%'; }
                                }
                            }
                        }
                    }
                });
            };

            initRevenueChart();
            initMcrChart();
            initCashVsIncomeChart();
            initDividendChart();
            initPeRatioChart();
            initRoeChart();
        });
    </script>
</body>
</html>
